@using BrandSquare.Models
@model Brand
@{
    ViewBag.Title = "edit";
}

<span class="hidden-lg-down BrandController"></span>

<div class="row card">
    <div class="col-md-7 row">
        <div class="col-sm-3 col-xs-5">
            <div class="waves-effect hm-white-strong view hm-zoom overlay" style="border-radius:50%">
                <img src="@Model.BrandLogo" class="" style="width:100%;height:100%" />
                <p class="mask flex-center">
                    <i class="fa fa-eye black-text fa-2x"></i>
                </p>
            </div>
        </div>
        <div class="col-sm-8 col-xs-6 row" style="padding-top:4%">
            <div class="col-xs-12">
                <h2 class="card-title h2-responsive left">
                    @Model.BrandName
                </h2>
            </div>
            <div class="col-xs-12">
                <p class="card-title">
                    <i class="fa fa-dot-circle-o"></i>  @Model.Category.CategoryName
                </p>
            </div>
        </div>
    </div>
    <x-socials e_social-email-address="@Model.SocialMedia.EmailAddress"
               e_social-facebook="@Model.SocialMedia.FaceBookPage"
               e_social-instagram="@Model.SocialMedia.InstagramLink"
               e_social-twitter="@Model.SocialMedia.TwitterHandle"
               e_social-website="@Model.SocialMedia.Website"></x-socials>
</div>

<x-editbrand e_general-bio="@Model.BrandBio"
             e_general-home-address="@Model.BrandHomeAddress"
             e_social-email-address="@Model.SocialMedia.EmailAddress"
             e_social-facebook="@Model.SocialMedia.FaceBookPage"
             e_social-instagram="@Model.SocialMedia.InstagramLink"
             e_social-twitter="@Model.SocialMedia.TwitterHandle"
             e_social-website="@Model.SocialMedia.Website">

</x-editbrand>
